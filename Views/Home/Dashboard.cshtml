    <script>
        // Initialize AOS animations
        document.addEventListener('DOMContentLoaded', function() {
            if (typeof AOS !== 'undefined') {
                AOS.init({
                    duration: 1000,
                    once: false,
                    offset: 100,
                    easing: 'ease-out-cubic',
                    mirror: true
                });
            }

            // Create data stream particles
            function createDataStreams() {
                const container = document.getElementById('dataStreams');
                for (let i = 0; i < 20; i++) {
                    const stream = document.createElement('div');
                    stream.className = 'data-stream-item';
                    stream.style.left = `${Math.random() * 100}%`;
                    stream.style.animationDelay = `${Math.random() * 5}s`;
                    stream.style.opacity = Math.random() * 0.3 + 0.1;
                    container.appendChild(stream);
                }
            }

            createDataStreams();

            // Animate stat numbers
            function animateStatCounter(element, start, end, duration) {
                let startTimestamp = null;
                const step = (timestamp) => {
                    if (!startTimestamp) startTimestamp = timestamp;
                    const progress = Math.min((timestamp - startTimestamp) / duration, 1);
                    const value = Math.floor(progress * (end - start) + start);

                    if (element.id === 'threatDatabase') {
                        element.textContent = `${value.toLocaleString()}+`;
                    } else if (element.id === 'responseTime') {
                        element.textContent = `${(value / 100).toFixed(1)}s`;
                    } else if (element.id === 'accuracyRate') {
                        element.textContent = `${((start + progress * (end - start)) / 100).toFixed(1)}%`;
                    } else {
                        element.textContent = value;
                    }

                    if (progress < 1) {
                        requestAnimationFrame(step);
                    }
                };
                requestAnimationFrame(step);
            }

            // Animate all stats
            setTimeout(() => {
                animateStatCounter(document.getElementById('totalScans'), 0, 256, 2000);
                animateStatCounter(document.getElementById('accuracyRate'), 99.0, 99.8, 2000);
                animateStatCounter(document.getElementById('responseTime'), 0, 18, 2000);
                animateStatCounter(document.getElementById('threatDatabase'), 0, 7400000, 2000);
            }, 1000);

            // Module hover effects
            const modules = document.querySelectorAll('.quantum-module');
            modules.forEach(module => {
                module.addEventListener('mouseenter', function() {
                    this.style.zIndex = '100';
                    const icon = this.querySelector('.module-icon');
                    icon.style.transform = 'scale(1.3) rotate(15deg)';
                    icon.style.filter = 'drop-shadow(0 0 25px currentColor)';
                });

                module.addEventListener('mouseleave', function() {
                    this.style.zIndex = '1';
                    const icon = this.querySelector('.module-icon');
                    icon.style.transform = 'scale(1) rotate(0)';
                    icon.style.filter = 'drop-shadow(0 0 0px currentColor)';
                });

                // Click effect
                module.addEventListener('click', function(e) {
                    e.preventDefault();

                    // Create ripple effect
                    const ripple = document.createElement('div');
                    const rect = this.getBoundingClientRect();
                    const size = Math.max(rect.width, rect.height);

                    ripple.style.width = ripple.style.height = `${size}px`;
                    ripple.style.left = `${e.clientX - rect.left - size/2}px`;
                    ripple.style.top = `${e.clientY - rect.top - size/2}px`;
                    ripple.style.background = 'radial-gradient(circle, rgba(56, 189, 248, 0.4) 0%, transparent 70%)';
                    ripple.style.position = 'absolute';
                    ripple.style.borderRadius = '50%';
                    ripple.style.animation = 'ripple 0.6s linear';
                    ripple.style.pointerEvents = 'none';

                    this.appendChild(ripple);

                    // Update button text
                    const actionBtn = this.querySelector('.module-action');
                    const originalHTML = actionBtn.innerHTML;
                    actionBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> INITIALIZING...';

                    // Simulate loading
                    setTimeout(() => {
                        ripple.remove();
                        actionBtn.innerHTML = originalHTML;

                        // Navigate to module
                        window.location.href = this.getAttribute('href');
                    }, 1500);
                });
            });

            // Add ripple animation
            const style = document.createElement('style');
            style.textContent = `
                @@keyframes ripple {
                    from { transform: scale(0); opacity: 1; }
                    to { transform: scale(4); opacity: 0; }
                }
            `;
            document.head.appendChild(style);

            // Update threat counts periodically
            setInterval(() => {
                const threatItems = document.querySelectorAll('.threat-count');
                threatItems.forEach(item => {
                    const current = parseInt(item.textContent);
                    const change = Math.floor(Math.random() * 10) - 2; // -2 to +8
                    const newValue = Math.max(0, current + change);
                    item.textContent = newValue;

                    // Add animation
                    item.style.transform = 'scale(1.1)';
                    setTimeout(() => {
                        item.style.transform = 'scale(1)';
                    }, 300);
                });
            }, 5000);

            // Add cyber terminal effect to header
            const header = document.querySelector('.user-profile-header');
            let hue = 0;
            setInterval(() => {
                hue = (hue + 1) % 360;
                header.style.borderColor = `hsla(${hue}, 100%, 65%, 0.5)`;
            }, 100);

            // Add keyboard shortcuts
            document.addEventListener('keydown', (e) => {
                if (e.ctrlKey && e.key === '1') modules[0].click();
                if (e.ctrlKey && e.key === '2') modules[1].click();
                if (e.ctrlKey && e.key === '3') modules[2].click();
                if (e.ctrlKey && e.key === '4') modules[3].click();
            });
        });
