    <script>
        // Initialize AOS animations
        document.addEventListener('DOMContentLoaded', function () {
            if (typeof AOS !== 'undefined') {
                AOS.init({
                    duration: 800,
                    once: true,
                    offset: 100
                });
            }

            // Navbar scroll effect
            const navbar = document.getElementById('cyberNav');
            window.addEventListener('scroll', function () {
                if (window.scrollY > 50) {
                    navbar.classList.add('scrolled');
                } else {
                    navbar.classList.remove('scrolled');
                }
            });

            // Add active class to current page link
            const currentPath = window.location.pathname;
            const navLinks = document.querySelectorAll('.nav-link');
            navLinks.forEach(link => {
                if (link.getAttribute('href') === currentPath) {
                    link.classList.add('active');
                    link.classList.remove('text-white-50');
                    link.classList.add('text-cyber-blue');
                }
            });

            // Add pulse animation to important elements
            const importantElements = document.querySelectorAll('.cyber-btn-info, .stat-value');
            importantElements.forEach(el => {
                el.classList.add('pulse-animation');
            });

            // Floating animation for icons
            const floatingIcons = document.querySelectorAll('.stat-icon');
            floatingIcons.forEach(icon => {
                icon.classList.add('float-animation');
            });

            // SIMPLE DROPDOWN HOVER FIX
            const dropdowns = document.querySelectorAll('.nav-item.dropdown');

            dropdowns.forEach(dropdown => {
                let hideTimeout;

                dropdown.addEventListener('mouseenter', function () {
                    clearTimeout(hideTimeout);
                    const toggle = this.querySelector('.dropdown-toggle');
                    if (toggle) {
                        const bsDropdown = bootstrap.Dropdown.getOrCreateInstance(toggle);
                        bsDropdown.show();
                    }
                });

                dropdown.addEventListener('mouseleave', function (e) {
                    // Check if mouse is moving to dropdown menu
                    const dropdownMenu = this.querySelector('.dropdown-menu');
                    const relatedTarget = e.relatedTarget;

                    if (dropdownMenu && dropdownMenu.contains(relatedTarget)) {
                        // Mouse is moving to dropdown menu, don't hide
                        return;
                    }

                    hideTimeout = setTimeout(() => {
                        const toggle = this.querySelector('.dropdown-toggle');
                        if (toggle) {
                            const bsDropdown = bootstrap.Dropdown.getInstance(toggle);
                            if (bsDropdown) {
                                bsDropdown.hide();
                            }
                        }
                    }, 300); // 300ms delay
                });
            });

            // Also handle mouse events on dropdown menu
            const dropdownMenus = document.querySelectorAll('.dropdown-menu');
            dropdownMenus.forEach(menu => {
                menu.addEventListener('mouseenter', function () {
                    // Clear any hide timeouts from parent
                    const parentDropdown = this.closest('.dropdown');
                    if (parentDropdown) {
                        clearTimeout(parentDropdown._hideTimeout);
                    }
                });

                menu.addEventListener('mouseleave', function (e) {
                    const parentDropdown = this.closest('.dropdown');
                    if (parentDropdown) {
                        // Hide after delay
                        setTimeout(() => {
                            const toggle = parentDropdown.querySelector('.dropdown-toggle');
                            if (toggle) {
                                const bsDropdown = bootstrap.Dropdown.getInstance(toggle);
                                if (bsDropdown) {
                                    bsDropdown.hide();
                                }
                            }
                        }, 300);
                    }
                });
            });
        });
    </script>
