        document.addEventListener("DOMContentLoaded", () => {
            // Create binary rain effect
            createBinaryRain();

            // Initialize input tracking
            const emailInput = document.getElementById("emailInput");
            const analyzeBtn = document.getElementById("analyzeBtn");
            const charCount = document.getElementById("charCount");
            const inputStatus = document.getElementById("inputStatus");

            /* ===============================
               INPUT VALIDATION UI
            =============================== */
            emailInput.addEventListener("input", () => {
                const len = emailInput.value.length;
                charCount.textContent = len;

                if (len === 0) {
                    inputStatus.innerHTML = '<i class="fas fa-clock"></i> Waiting for input';
                    inputStatus.style.color = "#666";
                    analyzeBtn.disabled = true;
                } else if (len < 50) {
                    inputStatus.innerHTML = '<i class="fas fa-exclamation-triangle"></i> Add more content';
                    inputStatus.style.color = "var(--cyber-yellow)";
                    analyzeBtn.disabled = true;
                } else {
                    inputStatus.innerHTML = '<i class="fas fa-check-circle"></i> Ready for analysis';
                    inputStatus.style.color = "var(--cyber-green)";
                    analyzeBtn.disabled = false;
                }
            });

            /* ===============================
               ERROR UI
            =============================== */
            window.showError = function (message) {
                const box = document.getElementById("errorBox");
                document.getElementById("errorText").innerText = message;
                box.classList.remove("d-none");
            };

            window.clearError = function () {
                document.getElementById("errorBox").classList.add("d-none");
            };

            /* ===============================
               ANALYZE BUTTON
            =============================== */
            analyzeBtn.addEventListener("click", async () => {
                const emailText = emailInput.value.trim();

                if (emailText.length < 50 || isLikelyGarbage(emailText)) {
                    showError("Input does not look like a real email. Please paste full email content.");
                    return;
                }

                clearError();

                const overlay = document.getElementById("scanningOverlay");
                overlay.classList.add("show");

                try {
                    // YOUR ORIGINAL API CALL - NO CHANGES
                    const res = await fetch("/api/email/analyze", {
                        method: "POST",
                        headers: { "Content-Type": "application/json" },
                        body: JSON.stringify({ emailContent: emailText })
                    });

                    const result = await res.json();

                    setTimeout(() => {
                        overlay.classList.remove("show");
                        if (result.riskLevel !== "Invalid") {
                            showResults(result);
                            loadHistory();
                        }
                    }, 1200);

                } catch (err) {
                    overlay.classList.remove("show");
                    console.error(err);
                    showError("Analysis failed. Please try again.");
                }
            });

            loadHistory();
        });

        /* ======================================================
           BINARY RAIN EFFECT
        ====================================================== */
        function createBinaryRain() {
            const container = document.getElementById('binaryFall');
            if (!container) return;

            // Clear existing
            container.innerHTML = '';

            // Create binary characters
            for (let i = 0; i < 100; i++) {
                const span = document.createElement('span');
                span.textContent = Math.random() > 0.5 ? '0' : '1';
                span.style.position = 'absolute';
                span.style.left = Math.random() * 100 + '%';
                span.style.top = Math.random() * 100 + '%';
                span.style.color = Math.random() > 0.5 ? 'var(--cyber-green)' : 'var(--cyber-cyan)';
                span.style.opacity = Math.random() * 0.2 + 0.05;
                span.style.fontSize = (Math.random() * 12 + 8) + 'px';
                span.style.fontFamily = 'monospace';
                span.style.fontWeight = 'bold';
                span.style.animation = `fall ${Math.random() * 5 + 3}s linear infinite`;
                span.style.animationDelay = Math.random() * -5 + 's';
                span.style.zIndex = '-198';
                container.appendChild(span);
            }

            // Add animation keyframes
            if (!document.getElementById('binaryRainStyle')) {
                const style = document.createElement('style');
                style.id = 'binaryRainStyle';
                style.textContent = `
                    @@keyframes fall {
                        0% { transform: translateY(-100px) rotate(0deg); opacity: 0; }
                        10% { opacity: 0.5; }
                        90% { opacity: 0.5; }
                        100% { transform: translateY(100vh) rotate(360deg); opacity: 0; }
                    }
                `;
                document.head.appendChild(style);
            }
        }

        /* ======================================================
           RESULTS UI
        ====================================================== */
        function showResults(result) {
            document.getElementById("resultsContainer").classList.add("show");
            document.getElementById("securityScore").innerText = result.securityScore + "%";

            // Update risk level text
            const riskLevel = document.getElementById("riskLevel");
            if (result.securityScore >= 80) {
                riskLevel.textContent = "LOW RISK";
                riskLevel.style.color = "var(--cyber-green)";
            } else if (result.securityScore >= 50) {
                riskLevel.textContent = "MEDIUM RISK";
                riskLevel.style.color = "var(--cyber-yellow)";
            } else {
                riskLevel.textContent = "HIGH RISK";
                riskLevel.style.color = "var(--cyber-red)";
            }

            updateResultCards(result.findings);

            /* DETAILS */
            const details = document.getElementById("detailsList");
            details.innerHTML = "";

            result.findings.forEach(f => {
                details.innerHTML += `
                    <li class="detail-item ${f.severity.toLowerCase()}">
                        <div class="detail-icon">
                            <i class="fas ${getIcon(f.severity)}"></i>
                        </div>
                        <div class="detail-text">${f.message}</div>
                    </li>
                `;
            });

            /* SCORE BREAKDOWN */
            const scoreList = document.getElementById("scoreBreakdownList");
            scoreList.innerHTML = "";

            if (result.scoreBreakdown?.length) {
                result.scoreBreakdown.forEach(item => {
                    scoreList.innerHTML += `
                        <li class="detail-item ${item.points < 0 ? "danger" : "safe"}">
                            <div class="detail-icon">
                                <i class="fas ${item.points < 0 ? "fa-minus-circle" : "fa-plus-circle"}"></i>
                            </div>
                            <div class="detail-text">
                                ${item.reason}
                                <strong style="float: right; color: ${item.points < 0 ? 'var(--cyber-red)' : 'var(--cyber-green)'}">
                                    (${item.points > 0 ? "+" : ""}${item.points})
                                </strong>
                            </div>
                        </li>
                    `;
                });
            } else {
                scoreList.innerHTML = `
                    <li class="detail-item safe">
                        <div class="detail-icon">
                            <i class="fas fa-info-circle"></i>
                        </div>
                        <div class="detail-text">No score deductions applied</div>
                    </li>
                `;
            }
        }

        /* ======================================================
           RESULT CARDS
        ====================================================== */
        function updateResultCards(findings) {
            // Set default safe state
            setCard("spoofingCard", "spoofingResult", "safe", "No spoofing detected");
            setCard("phishingCard", "phishingResult", "safe", "No phishing detected");
            setCard("maliciousCard", "maliciousResult", "safe", "No malicious content detected");

            // Update based on findings
            findings.forEach(f => {
                if (f.type === "Spoofing")
                    setCard("spoofingCard", "spoofingResult", mapSeverity(f.severity), f.message);
                if (f.type === "Phishing")
                    setCard("phishingCard", "phishingResult", mapSeverity(f.severity), f.message);
                if (f.type === "Malware")
                    setCard("maliciousCard", "maliciousResult", mapSeverity(f.severity), f.message);
            });
        }

        function setCard(cardId, textId, status, text) {
            document.getElementById(cardId).className = `result-card ${status}`;
            document.getElementById(textId).innerText = text;
        }

        /* ======================================================
           HELPERS
        ====================================================== */
        function isLikelyGarbage(text) {
            if (!text.includes(" ")) return true;
            if (new Set(text).size < 5) return true;
            if (!/[.!?\n]/.test(text)) return true;
            return false;
        }

        function mapSeverity(sev) {
            return sev === "Danger" ? "danger" : sev === "Warning" ? "warning" : "safe";
        }

        function getIcon(sev) {
            return sev === "Danger"
                ? "fa-times-circle"
                : sev === "Warning"
                ? "fa-exclamation-triangle"
                : "fa-check-circle";
        }

        /* ======================================================
           HISTORY
        ====================================================== */
        async function loadHistory() {
            try {
                const res = await fetch("/api/email/history");

                if (res.status === 401) {
                    document.getElementById("historyContainer").innerHTML =
                        `<div class="history-card" style="grid-column: 1 / -1; text-align: center; padding: 3rem;">
                            <i class="fas fa-user-lock" style="font-size: 3rem; margin-bottom: 1rem; color: var(--cyber-yellow);"></i>
                            <h3>Authentication Required</h3>
                            <p style="opacity: 0.7;">Please log in to view history</p>
                        </div>`;
                    return;
                }

                const history = await res.json();
                const container = document.getElementById("historyContainer");
                container.innerHTML = "";

                if (!history.length) {
                    container.innerHTML = `
                        <div class="history-card" style="grid-column: 1 / -1; text-align: center; padding: 3rem;">
                            <i class="fas fa-history" style="font-size: 3rem; margin-bottom: 1rem; opacity: 0.3;"></i>
                            <h3>No History Yet</h3>
                            <p style="opacity: 0.7;">Your analysis history will appear here</p>
                        </div>`;
                    return;
                }

                history.forEach(h => {
                    let scoreClass = "safe";
                    if (h.riskLevel === "High") scoreClass = "danger";
                    else if (h.riskLevel === "Medium") scoreClass = "warning";

                    container.innerHTML += `
                        <div class="history-card" onclick="viewHistoryItem('${h.id || ''}')">
                            <div class="history-score ${scoreClass}">${h.securityScore}%</div>
                            <div class="history-meta">
                                <p><strong>Risk:</strong> ${h.riskLevel}</p>
                                <p><strong>Findings:</strong> ${h.findingsCount || 0}</p>
                                <p><strong>Date:</strong> ${new Date(h.createdAt).toLocaleString()}</p>
                            </div>
                        </div>
                    `;
                });

            } catch (err) {
                console.error("History UI error:", err);
                document.getElementById("historyContainer").innerHTML = `
                    <div class="history-card" style="grid-column: 1 / -1; text-align: center; padding: 3rem;">
                        <i class="fas fa-exclamation-triangle" style="font-size: 3rem; margin-bottom: 1rem; color: var(--cyber-red);"></i>
                        <h3>Error Loading History</h3>
                        <p style="opacity: 0.7;">Please try again later</p>
                    </div>`;
            }
        }

        function viewHistoryItem(id) {
            // Placeholder for viewing historical item
            console.log("Viewing history item:", id);
            alert("History item details would open here");
        }

        /* ======================================================
           CLEAR HISTORY MODAL
        ====================================================== */
        function openClearHistoryModal() {
            document.getElementById("clearHistoryModal").classList.add("show");
        }

        function closeClearHistoryModal() {
            document.getElementById("clearHistoryModal").classList.remove("show");
        }

        async function confirmClearHistory() {
            try {
                const res = await fetch("/api/email/history", { method: "DELETE" });
                if (res.ok) {
                    closeClearHistoryModal();
                    loadHistory();
                }
            } catch (err) {
                console.error("Failed to clear history", err);
                closeClearHistoryModal();
            }
        }
    </script>
