<!DOCTYPE html>
<html lang="en" class="cyberpunk-2077">
<head>
    <meta charset="utf-8" />
    <title>DEEPFAKE NEXUS | Secure Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="theme-color" content="#000000">

    <!-- DEPENDENCIES -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700;900&family=Rajdhani:wght@400;600&family=Share+Tech+Mono&family=Exo+2:wght@300;400;600&family=Audiowide&family=Black+Ops+One&display=swap" rel="stylesheet">
    <!-- Removed xterm.css reference -->

    <style>
        /* === CYBERPUNK THEME === */
        :root {
            --cyber-void: #0b0f19;
            --cyber-dark: #0f172a;
            --cyber-darker: #090d1a;
            --cyber-blue: #38bdf8;
            --cyber-cyan: #00f3ff;
            --cyber-purple: #9d00ff;
            --cyber-pink: #ff00ff;
            --cyber-green: #00ff9d;
            --cyber-red: #ff003c;
            --cyber-yellow: #fff700;
            --cyber-orange: #ff7700;
        }

        /* === BASE STYLES === */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            -webkit-tap-highlight-color: transparent;
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
        }

        html {
            scroll-behavior: smooth;
            overflow-x: hidden;
            background: var(--cyber-void);
        }

        body {
            font-family: 'Exo 2', sans-serif;
            background: var(--cyber-void);
            color: #e5e7eb;
            overflow-x: hidden;
            min-height: 100vh;
            /* display: flex; */
            flex-direction: column;
            align-items: center;
            justify-content: center;
            position: relative;
            /* padding: 2rem; */
        }

        /* === LOGIN BACKGROUND EFFECTS === */
        .login-bg-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: radial-gradient(circle at 20% 50%, rgba(56, 189, 248, 0.05) 0%, transparent 50%), radial-gradient(circle at 80% 20%, rgba(157, 0, 255, 0.05) 0%, transparent 50%);
            z-index: -100;
            pointer-events: none;
        }

        .login-grid-lines {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: linear-gradient(90deg, rgba(56, 189, 248, 0.02) 1px, transparent 1px), linear-gradient(0deg, rgba(56, 189, 248, 0.02) 1px, transparent 1px);
            background-size: 50px 50px;
            z-index: -99;
            pointer-events: none;
            opacity: 0.3;
        }

        .login-security-scan {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 3px;
            background: linear-gradient(90deg, transparent, var(--cyber-green), var(--cyber-blue), var(--cyber-purple), transparent);
            z-index: 999;
            pointer-events: none;
            animation: securityScan 3s ease-in-out infinite;
            box-shadow: 0 0 30px var(--cyber-green);
        }

        @@keyframes securityScan {
            0% {
                transform: translateY(-100vh);
                opacity: 0;
            }

            10%, 90% {
                opacity: 1;
            }

            100% {
                transform: translateY(100vh);
                opacity: 0;
            }
        }

        /* === LOGIN CONTAINER === */
        .login-container {
            width: 100%;
            max-width: 1200px;
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 4rem;
            align-items: center;
        }

        @@media (max-width: 992px) {
            .login-container {
                grid-template-columns: 1fr;
                gap: 2rem;
            }
        }

        /* === LOGIN FORM CARD === */
        .login-form-card {
            background: rgba(15, 23, 42, 0.85);
            border-radius: 25px;
            border: 2px solid rgba(56, 189, 248, 0.3);
            padding: 3rem;
            position: relative;
            overflow: hidden;
            backdrop-filter: blur(25px);
            box-shadow: 0 25px 75px rgba(0, 0, 0, 0.7), 0 0 100px rgba(56, 189, 248, 0.3), inset 0 0 50px rgba(56, 189, 248, 0.1);
            transform: translateZ(0);
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        }

            .login-form-card::before {
                content: '';
                position: absolute;
                top: -2px;
                left: -2px;
                right: -2px;
                bottom: -2px;
                background: linear-gradient(45deg, var(--cyber-blue), var(--cyber-purple), var(--cyber-pink), var(--cyber-blue));
                background-size: 400% 400%;
                border-radius: 27px;
                z-index: -1;
                opacity: 0;
                transition: opacity 0.4s ease;
                animation: gradientFlow 3s linear infinite;
            }

            .login-form-card:hover::before {
                opacity: 1;
            }

            .login-form-card:hover {
                transform: translateY(-10px) scale(1.02);
                box-shadow: 0 35px 100px rgba(0, 0, 0, 0.8), 0 0 150px rgba(56, 189, 248, 0.5), inset 0 0 80px rgba(56, 189, 248, 0.2);
            }

        @@keyframes gradientFlow {
            0% {
                background-position: 0% 50%;
            }

            50% {
                background-position: 100% 50%;
            }

            100% {
                background-position: 0% 50%;
            }
        }

        /* === LOGIN HEADER === */
        .login-header {
            text-align: center;
            margin-bottom: 3rem;
            position: relative;
        }

        .login-title {
            font-family: 'Audiowide', cursive;
            font-size: 2.5rem;
            background: linear-gradient(135deg, var(--cyber-blue), var(--cyber-cyan));
            -webkit-background-clip: text;
            background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 0.5rem;
            text-transform: uppercase;
            letter-spacing: 2px;
        }

        .login-subtitle {
            color: rgba(229, 231, 235, 0.7);
            font-size: 1.1rem;
        }

        /* === SECURITY BADGE === */
        .security-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.8rem;
            padding: 0.8rem 1.5rem;
            background: rgba(56, 189, 248, 0.1);
            border: 1px solid rgba(56, 189, 248, 0.3);
            border-radius: 30px;
            margin: 1.5rem auto;
            animation: securityPulse 2s infinite ease-in-out;
        }

        @@keyframes securityPulse {
            0%, 100% {
                box-shadow: 0 0 15px rgba(56, 189, 248, 0.3);
                transform: scale(1);
            }

            50% {
                box-shadow: 0 0 30px rgba(56, 189, 248, 0.5);
                transform: scale(1.02);
            }
        }

        .security-text {
            font-family: 'Orbitron', monospace;
            font-size: 0.9rem;
            font-weight: 600;
            color: var(--cyber-blue);
            letter-spacing: 1px;
            text-transform: uppercase;
        }

        /* === LOGIN FORM === */
        .cyber-form-group {
            margin-bottom: 2rem;
            position: relative;
        }

        .cyber-form-label {
            display: flex;
            align-items: center;
            gap: 0.8rem;
            font-family: 'Orbitron', monospace;
            font-weight: 600;
            color: var(--cyber-blue);
            margin-bottom: 0.8rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            font-size: 0.9rem;
        }

        .cyber-form-control {
            background: rgba(15, 23, 42, 0.9);
            border: 2px solid rgba(56, 189, 248, 0.3);
            border-radius: 15px;
            color: #e5e7eb;
            padding: 1.2rem 1.5rem;
            font-family: 'Exo 2', sans-serif;
            font-size: 1rem;
            width: 100%;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
        }

            .cyber-form-control:focus {
                outline: none;
                border-color: var(--cyber-blue);
                background: rgba(15, 23, 42, 0.95);
                box-shadow: 0 0 30px rgba(56, 189, 248, 0.4), inset 0 0 20px rgba(56, 189, 248, 0.1);
                transform: translateY(-2px);
            }

            .cyber-form-control::placeholder {
                color: rgba(229, 231, 235, 0.4);
            }

        .password-strength {
            height: 4px;
            background: rgba(229, 231, 235, 0.1);
            border-radius: 2px;
            margin-top: 0.5rem;
            overflow: hidden;
            position: relative;
        }

        .password-strength-fill {
            height: 100%;
            width: 0%;
            border-radius: 2px;
            transition: all 0.3s ease;
            background: linear-gradient(90deg, var(--cyber-red), var(--cyber-yellow), var(--cyber-green));
        }

        /* === FORM OPTIONS === */
        .form-options {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
        }

        .remember-me {
            display: flex;
            align-items: center;
            gap: 0.8rem;
        }

        .cyber-checkbox {
            width: 22px;
            height: 22px;
            border: 2px solid var(--cyber-blue);
            border-radius: 6px;
            background: rgba(56, 189, 248, 0.1);
            cursor: pointer;
            position: relative;
            transition: all 0.3s ease;
        }

            .cyber-checkbox.checked {
                background: var(--cyber-blue);
            }

                .cyber-checkbox.checked::after {
                    content: '✓';
                    position: absolute;
                    top: 50%;
                    left: 50%;
                    transform: translate(-50%, -50%);
                    color: white;
                    font-weight: bold;
                    font-size: 14px;
                }

        .checkbox-label {
            color: rgba(229, 231, 235, 0.8);
            font-size: 0.9rem;
            cursor: pointer;
        }

        .forgot-password {
            color: var(--cyber-cyan);
            text-decoration: none;
            font-size: 0.9rem;
            transition: all 0.3s ease;
            font-weight: 500;
        }

            .forgot-password:hover {
                color: white;
                text-shadow: 0 0 10px var(--cyber-cyan);
            }

        /* === LOGIN BUTTON === */
        .cyber-login-btn {
            width: 100%;
            padding: 1.2rem;
            font-family: 'Orbitron', monospace;
            font-weight: 700;
            font-size: 1.1rem;
            letter-spacing: 2px;
            text-transform: uppercase;
            background: linear-gradient(135deg, var(--cyber-blue), var(--cyber-purple));
            color: white;
            border: none;
            border-radius: 15px;
            cursor: pointer;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 1rem;
            margin-bottom: 1.5rem;
        }

            .cyber-login-btn::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
                transition: 0.8s ease;
            }

            .cyber-login-btn:hover::before {
                left: 100%;
            }

            .cyber-login-btn:hover {
                transform: translateY(-5px) scale(1.02);
                box-shadow: 0 20px 60px rgba(56, 189, 248, 0.5), 0 0 100px rgba(56, 189, 248, 0.3);
                letter-spacing: 3px;
            }

            .cyber-login-btn:active {
                transform: translateY(-2px) scale(0.98);
            }

        /* === REGISTER LINK === */
        .register-link {
            text-align: center;
            margin-top: 2rem;
            padding-top: 2rem;
            border-top: 1px solid rgba(56, 189, 248, 0.2);
        }

        .register-text {
            color: rgba(229, 231, 235, 0.7);
            font-size: 0.95rem;
            margin-bottom: 0.5rem;
        }

        .register-cta {
            color: var(--cyber-cyan);
            text-decoration: none;
            font-weight: 600;
            font-size: 1rem;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

            .register-cta:hover {
                color: white;
                transform: translateX(5px);
                text-shadow: 0 0 15px var(--cyber-cyan);
            }

        /* === SECURITY TERMINAL === */
        .security-terminal {
            background: rgba(15, 23, 42, 0.85);
            border-radius: 25px;
            border: 2px solid rgba(56, 189, 248, 0.3);
            padding: 2.5rem;
            height: 100%;
            backdrop-filter: blur(25px);
            box-shadow: 0 25px 75px rgba(0, 0, 0, 0.7), 0 0 100px rgba(157, 0, 255, 0.3), inset 0 0 50px rgba(157, 0, 255, 0.1);
        }

        .terminal-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 2rem;
            padding-bottom: 1.5rem;
            border-bottom: 2px solid rgba(56, 189, 248, 0.2);
        }

        .terminal-title {
            font-family: 'Orbitron', monospace;
            color: var(--cyber-blue);
            font-size: 1.2rem;
            letter-spacing: 2px;
            text-transform: uppercase;
        }

        .terminal-controls {
            display: flex;
            gap: 0.8rem;
        }

        .terminal-control {
            width: 14px;
            height: 14px;
            border-radius: 50%;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .control-close {
            background: var(--cyber-red);
        }

        .control-minimize {
            background: var(--cyber-yellow);
        }

        .control-maximize {
            background: var(--cyber-green);
        }

        .terminal-control:hover {
            transform: scale(1.2);
            box-shadow: 0 0 10px currentColor;
        }

        .terminal-content {
            font-family: 'Share Tech Mono', monospace;
            font-size: 1rem;
            line-height: 1.8;
            color: rgba(56, 189, 248, 0.9);
        }

        .terminal-line {
            margin-bottom: 1rem;
            opacity: 0;
            animation: typeIn 0.5s ease forwards;
            text-shadow: 0 0 10px rgba(56, 189, 235, 0.5);
        }

        @@keyframes typeIn {
            to {
                opacity: 1;
            }
        }

        .terminal-success {
            color: var(--cyber-green);
            text-shadow: 0 0 15px rgba(0, 255, 157, 0.5);
        }

        .terminal-warning {
            color: var(--cyber-yellow);
            text-shadow: 0 0 15px rgba(255, 247, 0, 0.5);
        }

        .terminal-error {
            color: var(--cyber-red);
            text-shadow: 0 0 15px rgba(255, 0, 60, 0.5);
        }

        /* === RESPONSIVE DESIGN === */
        @@media (max-width: 768px) {
            body {
                padding: 1rem;
            }

            .login-container {
                gap: 2rem;
            }

            .login-form-card {
                padding: 2rem;
            }

            .login-title {
                font-size: 2rem;
            }

            .security-terminal {
                padding: 1.5rem;
            }

            .cyber-login-btn {
                padding: 1rem;
                font-size: 1rem;
            }
        }

        @@media (max-width: 480px) {
            .login-form-card {
                padding: 1.5rem;
            }

            .login-title {
                font-size: 1.6rem;
            }

            .cyber-form-control {
                padding: 1rem;
            }

            .form-options {
                flex-direction: column;
                align-items: flex-start;
                gap: 1rem;
            }
        }
    </style>
</head>
<body>
    <!-- BACKGROUND EFFECTS -->
    <div class="login-bg-overlay"></div>
    <div class="login-grid-lines"></div>
    <div class="login-security-scan"></div>

    <!-- LOGIN CONTAINER -->
    <div class="login-container">
        <!-- LOGIN FORM -->
        <div class="login-form-card">
            <!-- LOGIN HEADER -->
            <div class="login-header">
                <h1 class="login-title">
                    <i class="fas fa-user-shield me-2"></i>
                    SECURE LOGIN
                </h1>
                <p class="login-subtitle">Access your quantum security dashboard</p>

                <!-- SECURITY BADGE -->
                <div class="security-badge">
                    <i class="fas fa-shield-alt"></i>
                    <span class="security-text">Military-Grade Encryption</span>
                </div>
            </div>

            <!-- LOGIN FORM -->
            <form id="loginForm" method="post" action="/Account/Login">

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger mt-3 text-center" role="alert"
                         style="background: rgba(255, 0, 60, 0.15);
                    border: 1px solid rgba(255, 0, 60, 0.4);
                    color: #ff003c;
                    font-family: 'Orbitron', monospace;
                    letter-spacing: 1px;">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        @ViewBag.Error
                    </div>
                }


                <!-- EMAIL FIELD -->
                <div class="cyber-form-group">
                    <label class="cyber-form-label">
                        <i class="fas fa-envelope"></i>
                        Email Address
                    </label>
                    <input type="email"
                           name="email"
                           class="cyber-form-control"
                           placeholder="Enter your quantum email"
                           required
                           autocomplete="username" />
                </div>

                <!-- PASSWORD FIELD -->
                <div class="cyber-form-group">
                    <div class="d-flex justify-content-between align-items-center">
                        <label class="cyber-form-label">
                            <i class="fas fa-key"></i>
                            Password
                        </label>
                        <div class="password-requirements">
                            <i class="fas fa-info-circle text-cyber-blue"
                               data-bs-toggle="tooltip"
                               title="Minimum 8 characters with uppercase, lowercase, number & special character"></i>
                        </div>
                    </div>
                    <div class="position-relative">
                        <input type="password"
                               name="password"
                               id="passwordInput"
                               class="cyber-form-control"
                               placeholder="Enter your secure password"
                               required
                               autocomplete="current-password"
                               minlength="8" />
                        <button type="button" class="btn btn-link position-absolute end-0 top-50 translate-middle-y me-3" id="togglePassword">
                            <i class="fas fa-eye text-cyber-blue"></i>
                        </button>
                    </div>
                    <div class="password-strength">
                        <div class="password-strength-fill" id="passwordStrength"></div>
                    </div>
                </div>

                <!-- FORM OPTIONS -->
                <div class="form-options">
                    <div class="remember-me">
                        <div class="cyber-checkbox" id="rememberCheckbox"></div>
                        <label class="checkbox-label" for="rememberCheckbox">Remember me</label>
                    </div>
                    <a href="/Account/ForgotPassword" class="forgot-password">
                        <i class="fas fa-question-circle me-1"></i>
                        Forgot Password?
                    </a>
                </div>

                <!-- SUBMIT BUTTON -->
                <button type="submit" class="cyber-login-btn" id="loginButton">
                    <i class="fas fa-sign-in-alt"></i>
                    <span id="loginButtonText">INITIATE LOGIN SEQUENCE</span>
                </button>

                <!-- REGISTER LINK -->
                <div class="register-link">
                    <p class="register-text">New to Deepfake Nexus?</p>
                    <a href="/Account/Register" class="register-cta">
                        CREATE QUANTUM ACCOUNT
                        <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
            </form>
        </div>

        <!-- SECURITY TERMINAL -->
        <div class="security-terminal">
            <div class="terminal-header">
                <h3 class="terminal-title">SECURITY CONSOLE</h3>
                <div class="terminal-controls">
                    <div class="terminal-control control-close"></div>
                    <div class="terminal-control control-minimize"></div>
                    <div class="terminal-control control-maximize"></div>
                </div>
            </div>

            <div class="terminal-content" id="terminalOutput">
                <div class="terminal-line" style="animation-delay: 0.2s">
                    > Initializing Security Protocols...
                </div>
                <div class="terminal-line" style="animation-delay: 0.4s">
                    > Loading Authentication Module...
                </div>
                <div class="terminal-line" style="animation-delay: 0.6s">
                    > Encrypting Connection...
                </div>
                <div class="terminal-line terminal-success" style="animation-delay: 0.8s">
                    > ✓ TLS 1.3 Encryption: ACTIVE
                </div>
                <div class="terminal-line" style="animation-delay: 1s">
                    > Verifying Server Identity...
                </div>
                <div class="terminal-line terminal-success" style="animation-delay: 1.2s">
                    > ✓ Certificate Validated
                </div>
                <div class="terminal-line" style="animation-delay: 1.4s">
                    > Loading Neural Networks...
                </div>
                <div class="terminal-line terminal-success" style="animation-delay: 1.6s">
                    > ✓ Behavioral Analysis: READY
                </div>
                <div class="terminal-line" style="animation-delay: 1.8s">
                    > Establishing Secure Tunnel...
                </div>
                <div class="terminal-line terminal-success" style="animation-delay: 2s">
                    > ✓ Quantum Encryption: ENABLED
                </div>
                <div class="terminal-line" style="animation-delay: 2.2s">
                    > Ready for Authentication Sequence...
                </div>
                <div class="terminal-line terminal-warning" style="animation-delay: 2.4s">
                    > WARNING: Multiple failed attempts will trigger lockdown
                </div>
                <div class="terminal-line" style="animation-delay: 2.6s">
                    > Security Level: MAXIMUM
                </div>
                <div class="terminal-line terminal-success" style="animation-delay: 2.8s">
                    > AWAITING USER CREDENTIALS...
                </div>
            </div>
        </div>
    </div>

    <!-- SCRIPTS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize tooltips
            const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            const tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });

            // Password toggle
            const togglePassword = document.getElementById('togglePassword');
            const passwordInput = document.getElementById('passwordInput');
            const passwordStrength = document.getElementById('passwordStrength');

            togglePassword.addEventListener('click', function() {
                const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
                passwordInput.setAttribute('type', type);
                this.querySelector('i').classList.toggle('fa-eye');
                this.querySelector('i').classList.toggle('fa-eye-slash');
            });

            // Password strength indicator
            passwordInput.addEventListener('input', function() {
                const password = this.value;
                let strength = 0;

                // Length check
                if (password.length >= 8) strength += 20;
                if (password.length >= 12) strength += 10;

                // Character type checks
                if (/[A-Z]/.test(password)) strength += 20;
                if (/[a-z]/.test(password)) strength += 20;
                if (/[0-9]/.test(password)) strength += 20;
                if (/[^A-Za-z0-9]/.test(password)) strength += 20;

                // Update strength bar
                passwordStrength.style.width = Math.min(strength, 100) + '%';

                // Update color
                if (strength < 40) {
                    passwordStrength.style.background = 'var(--cyber-red)';
                } else if (strength < 70) {
                    passwordStrength.style.background = 'var(--cyber-yellow)';
                } else {
                    passwordStrength.style.background = 'var(--cyber-green)';
                }
            });

            // Remember me checkbox
            const rememberCheckbox = document.getElementById('rememberCheckbox');
            rememberCheckbox.addEventListener('click', function() {
                this.classList.toggle('checked');
            });

            // Form submission
            const loginForm = document.getElementById('loginForm');
            const loginButton = document.getElementById('loginButton');
            const loginButtonText = document.getElementById('loginButtonText');

                // Show loading state
                loginButton.disabled = true;
                loginButtonText.textContent = 'AUTHENTICATING...';
                loginButton.innerHTML = '<i class="fas fa-spinner fa-spin"></i> AUTHENTICATING...';

                // Add terminal messages
                const terminal = document.getElementById('terminalOutput');
                const newLines = [
                    '<div class="terminal-line terminal-warning" style="animation-delay: 0s">> User credentials received...</div>',
                    '<div class="terminal-line" style="animation-delay: 0.2s">> Verifying identity...</div>',
                    '<div class="terminal-line" style="animation-delay: 0.4s">> Checking security clearance...</div>',
                    '<div class="terminal-line" style="animation-delay: 0.6s">> Accessing neural database...</div>',
                ];

                newLines.forEach((line, index) => {
                    setTimeout(() => {
                        terminal.insertAdjacentHTML('beforeend', line);
                    }, index * 200);
                });

                // Simulate API call
                setTimeout(() => {
                    const email = loginForm.querySelector('[name="email"]').value;
                    const password = loginForm.querySelector('[name="password"]').value;

                    // Simple validation
                    if (email && password.length >= 8) {
                        // Success animation
                        terminal.insertAdjacentHTML('beforeend',
                            '<div class="terminal-line terminal-success" style="animation-delay: 0s">> ✓ Authentication successful!</div>' +
                            '<div class="terminal-line terminal-success" style="animation-delay: 0.2s">> ✓ Security clearance: GRANTED</div>' +
                            '<div class="terminal-line" style="animation-delay: 0.4s">> Redirecting to Quantum Dashboard...</div>'
                        );

                        loginButton.innerHTML = '<i class="fas fa-check-circle"></i> ACCESS GRANTED';
                        loginButton.style.background = 'linear-gradient(135deg, var(--cyber-green), var(--cyber-cyan))';

                        // Redirect after success
                        setTimeout(() => {
                            window.location.href = '/Home/Dashboard';
                        }, 1500);
                    } else {
                        // Error animation
                        terminal.insertAdjacentHTML('beforeend',
                            '<div class="terminal-line terminal-error" style="animation-delay: 0s">> ✗ Authentication failed!</div>' +
                            '<div class="terminal-line terminal-warning" style="animation-delay: 0.2s">> Please check your credentials</div>'
                        );

                        loginButton.disabled = false;
                        loginButtonText.textContent = 'INITIATE LOGIN SEQUENCE';
                        loginButton.innerHTML = '<i class="fas fa-sign-in-alt"></i> INITIATE LOGIN SEQUENCE';

                        // Shake animation
                        loginForm.style.animation = 'shake 0.5s';
                        setTimeout(() => {
                            loginForm.style.animation = '';
                        }, 500);
                    }
                }, 2000);
            });

            // Add shake animation
            const style = document.createElement('style');
            style.textContent = `
                @@keyframes shake {
                    0%, 100% { transform: translateX(0); }
                    10%, 30%, 50%, 70%, 90% { transform: translateX(-5px); }
                    20%, 40%, 60%, 80% { transform: translateX(5px); }
                }
            `;
            document.head.appendChild(style);

            // Terminal typing animation
            const terminalLines = document.querySelectorAll('.terminal-line');
            terminalLines.forEach((line, index) => {
                const text = line.textContent;
                line.textContent = '';
                let i = 0;

                setTimeout(() => {
                    function typeWriter() {
                        if (i < text.length) {
                            line.textContent += text.charAt(i);
                            i++;
                            setTimeout(typeWriter, 20);
                        }
                    }
                    typeWriter();
                }, index * 100);
            });
        });
    </script>
