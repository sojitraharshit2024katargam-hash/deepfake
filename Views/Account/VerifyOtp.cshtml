@{
    ViewData["Title"] = "Verify OTP";
}

<!DOCTYPE html>
<html lang="en" class="cyberpunk-2077">
<head>
    <meta charset="utf-8" />
    <title>DEEPFAKE NEXUS | Quantum OTP Verification</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="theme-color" content="#000000">

    <!-- DEPENDENCIES -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700;900&family=Rajdhani:wght@400;600&family=Share+Tech+Mono&family=Exo+2:wght@300;400;600&family=Audiowide&family=Black+Ops+One&display=swap" rel="stylesheet">

    <style>
        /* === CYBERPUNK THEME === */
        :root {
            --cyber-void: #0b0f19;
            --cyber-dark: #0f172a;
            --cyber-darker: #090d1a;
            --cyber-blue: #38bdf8;
            --cyber-cyan: #00f3ff;
            --cyber-purple: #9d00ff;
            --cyber-pink: #ff00ff;
            --cyber-green: #00ff9d;
            --cyber-red: #ff003c;
            --cyber-yellow: #fff700;
            --cyber-orange: #ff7700;
        }

        /* === BASE STYLES === */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            -webkit-tap-highlight-color: transparent;
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
        }

        html {
            scroll-behavior: smooth;
            overflow-x: hidden;
            background: var(--cyber-void);
        }

        body {
            font-family: 'Exo 2', sans-serif;
            background: var(--cyber-void);
            color: #e5e7eb;
            overflow-x: hidden;
            min-height: 100vh;
            /* display: flex; */
            /* justify-content: center; */
            /* flex-direction:column; */
            /* align-items: center; */
            /* padding: 2rem; */
            position: relative;
        }

        /* === BACKGROUND EFFECTS === */
        .cyber-bg-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: radial-gradient(circle at 20% 50%, rgba(56, 189, 248, 0.05) 0%, transparent 50%), radial-gradient(circle at 80% 20%, rgba(157, 0, 255, 0.05) 0%, transparent 50%);
            z-index: -100;
            pointer-events: none;
        }

        .cyber-grid-lines {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: linear-gradient(90deg, rgba(56, 189, 248, 0.02) 1px, transparent 1px), linear-gradient(0deg, rgba(56, 189, 248, 0.02) 1px, transparent 1px);
            background-size: 50px 50px;
            z-index: -99;
            pointer-events: none;
            opacity: 0.3;
        }

        .cyber-scan-line {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 3px;
            background: linear-gradient(90deg, transparent, var(--cyber-green), var(--cyber-blue), var(--cyber-purple), transparent);
            z-index: 999;
            pointer-events: none;
            animation: securityScan 3s ease-in-out infinite;
            box-shadow: 0 0 30px var(--cyber-green);
        }

        @@keyframes securityScan {
            0% {
                transform: translateY(-100vh);
                opacity: 0;
            }

            10%, 90% {
                opacity: 1;
            }

            100% {
                transform: translateY(100vh);
                opacity: 0;
            }
        }

        /* === OTP CONTAINER === */
        .otp-container {
            width: 100%;
            max-width: 450px;
            margin: 0 auto;
        }

        /* === OTP CARD === */
        .otp-card {
            background: rgba(15, 23, 42, 0.85);
            border-radius: 25px;
            border: 2px solid rgba(56, 189, 248, 0.3);
            padding: 3rem;
            position: relative;
            overflow: hidden;
            backdrop-filter: blur(25px);
            box-shadow: 0 25px 75px rgba(0, 0, 0, 0.7), 0 0 100px rgba(56, 189, 248, 0.3), inset 0 0 50px rgba(56, 189, 248, 0.1);
            transform: translateZ(0);
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        }

            .otp-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 35px 100px rgba(0, 0, 0, 0.8), 0 0 150px rgba(56, 189, 248, 0.5), inset 0 0 80px rgba(56, 189, 248, 0.2);
            }

        /* === HEADER === */
        .otp-header {
            text-align: center;
            margin-bottom: 2.5rem;
        }

        .otp-title {
            font-family: 'Audiowide', cursive;
            font-size: 2.2rem;
            background: linear-gradient(135deg, var(--cyber-blue), var(--cyber-cyan));
            -webkit-background-clip: text;
            background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 0.5rem;
            text-transform: uppercase;
            letter-spacing: 2px;
        }

        .otp-subtitle {
            color: rgba(229, 231, 235, 0.7);
            font-size: 1.1rem;
        }

        /* === SECURITY BADGE === */
        .security-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.8rem;
            padding: 0.8rem 1.5rem;
            background: rgba(56, 189, 248, 0.1);
            border: 1px solid rgba(56, 189, 248, 0.3);
            border-radius: 30px;
            margin: 1.5rem auto;
            animation: securityPulse 2s infinite ease-in-out;
        }

        @@keyframes securityPulse {
            0%, 100% {
                box-shadow: 0 0 15px rgba(56, 189, 248, 0.3);
                transform: scale(1);
            }

            50% {
                box-shadow: 0 0 30px rgba(56, 189, 248, 0.5);
                transform: scale(1.02);
            }
        }

        .security-text {
            font-family: 'Orbitron', monospace;
            font-size: 0.9rem;
            font-weight: 600;
            color: var(--cyber-blue);
            letter-spacing: 1px;
            text-transform: uppercase;
        }

        /* === OTP FORM === */
        .cyber-form-group {
            margin-bottom: 2rem;
            position: relative;
        }

        .cyber-form-label {
            display: flex;
            align-items: center;
            gap: 0.8rem;
            font-family: 'Orbitron', monospace;
            font-weight: 600;
            color: var(--cyber-blue);
            margin-bottom: 0.8rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            font-size: 0.9rem;
        }

        .cyber-form-control {
            background: rgba(15, 23, 42, 0.9);
            border: 2px solid rgba(56, 189, 248, 0.3);
            border-radius: 15px;
            color: #e5e7eb;
            padding: 1.2rem 1.5rem;
            font-family: 'Exo 2', sans-serif;
            font-size: 1rem;
            width: 100%;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
        }

            .cyber-form-control:focus {
                outline: none;
                border-color: var(--cyber-blue);
                background: rgba(15, 23, 42, 0.95);
                box-shadow: 0 0 30px rgba(56, 189, 248, 0.4), inset 0 0 20px rgba(56, 189, 248, 0.1);
                transform: translateY(-2px);
            }

            .cyber-form-control::placeholder {
                color: rgba(229, 231, 235, 0.4);
            }

        /* === VERIFY BUTTON === */
        .cyber-verify-btn {
            width: 100%;
            padding: 1.2rem;
            font-family: 'Orbitron', monospace;
            font-weight: 700;
            font-size: 1.1rem;
            letter-spacing: 2px;
            text-transform: uppercase;
            background: linear-gradient(135deg, var(--cyber-green), var(--cyber-cyan));
            color: white;
            border: none;
            border-radius: 15px;
            cursor: pointer;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            overflow: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 1rem;
            margin-bottom: 1.5rem;
        }

            .cyber-verify-btn::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
                transition: 0.8s ease;
            }

            .cyber-verify-btn:hover::before {
                left: 100%;
            }

            .cyber-verify-btn:hover {
                transform: translateY(-5px) scale(1.02);
                box-shadow: 0 20px 60px rgba(0, 255, 157, 0.5), 0 0 100px rgba(0, 255, 157, 0.3);
                letter-spacing: 3px;
            }

        /* === ERROR MESSAGE === */
        .cyber-error {
            background: rgba(255, 0, 60, 0.1);
            border: 2px solid rgba(255, 0, 60, 0.3);
            border-radius: 12px;
            padding: 1.2rem;
            margin-top: 1.5rem;
            text-align: center;
            animation: slideIn 0.3s ease-out;
        }

        .error-icon {
            font-size: 1.5rem;
            color: var(--cyber-red);
            margin-bottom: 0.5rem;
        }

        .error-text {
            color: var(--cyber-red);
            font-family: 'Orbitron', monospace;
            font-size: 0.9rem;
            letter-spacing: 1px;
        }

        @@keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* === BACK LINK === */
        .back-link {
            text-align: center;
            margin-top: 2rem;
            padding-top: 2rem;
            border-top: 1px solid rgba(56, 189, 248, 0.2);
        }

        .back-text {
            color: rgba(229, 231, 235, 0.7);
            font-size: 0.95rem;
            margin-bottom: 0.5rem;
        }

        .back-cta {
            color: var(--cyber-cyan);
            text-decoration: none;
            font-weight: 600;
            font-size: 1rem;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

            .back-cta:hover {
                color: white;
                transform: translateX(-5px);
                text-shadow: 0 0 15px var(--cyber-cyan);
            }

        /* === RESPONSIVE DESIGN === */
        @@media (max-width: 768px) {
            body {
                padding: 1rem;
            }

            .otp-card {
                padding: 2rem;
            }

            .otp-title {
                font-size: 1.8rem;
            }

            .cyber-verify-btn {
                padding: 1rem;
                font-size: 1rem;
            }
        }

        @@media (max-width: 480px) {
            .otp-card {
                padding: 1.5rem;
            }

            .otp-title {
                font-size: 1.5rem;
            }

            .cyber-form-control {
                padding: 1rem;
            }
        }
    </style>
</head>
<body>
    <!-- BACKGROUND EFFECTS -->
    <div class="cyber-bg-overlay"></div>
    <div class="cyber-grid-lines"></div>
    <div class="cyber-scan-line"></div>

    <!-- OTP CONTAINER -->
    <div class="otp-container">
        <div class="otp-card">
            <!-- HEADER -->
            <div class="otp-header">
                <h1 class="otp-title">
                    <i class="fas fa-user-shield me-2"></i>
                    QUANTUM OTP VERIFICATION
                </h1>
                <p class="otp-subtitle">Enter the one-time code sent to your quantum email</p>

                <!-- SECURITY BADGE -->
                <div class="security-badge">
                    <i class="fas fa-shield-alt"></i>
                    <span class="security-text">Time-Sensitive Encryption</span>
                </div>
            </div>

            <!-- OTP FORM -->
            <form method="post" action="/Account/VerifyOtp">
                <input type="hidden" name="email" value="@TempData["Email"]" />

                <!-- OTP FIELD -->
                <div class="cyber-form-group">
                    <label class="cyber-form-label">
                        <i class="fas fa-key"></i>
                        VERIFICATION CODE
                    </label>
                    <input type="text"
                           name="otp"
                           class="cyber-form-control"
                           placeholder="Enter your 6-digit OTP"
                           required
                           autocomplete="one-time-code"
                           pattern="\d{6}"
                           maxlength="6" />
                </div>

                <!-- VERIFY BUTTON -->
                <button type="submit" class="cyber-verify-btn">
                    <i class="fas fa-fingerprint"></i>
                    VERIFY QUANTUM CODE
                </button>

                <!-- ERROR MESSAGE -->
                @if (ViewBag.Error != null)
                {
                    <div class="cyber-error">
                        <div class="error-icon">
                            <i class="fas fa-exclamation-circle"></i>
                        </div>
                        <div class="error-text">@ViewBag.Error</div>
                    </div>
                }
            </form>

            <!-- BACK LINK -->
            <div class="back-link">
                <p class="back-text">Need to change email?</p>
                <a href="/Account/Login" class="back-cta">
                    <i class="fas fa-arrow-left"></i>
                    BACK TO LOGIN
                </a>
            </div>
        </div>
    </div>

    <!-- SCRIPTS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Auto-focus OTP input
            const otpInput = document.querySelector('input[name="otp"]');
            if (otpInput) {
                otpInput.focus();
            }

            // Add input validation for numbers only
            otpInput.addEventListener('input', function(e) {
                this.value = this.value.replace(/[^0-9]/g, '');
            });

            // Add shake animation on error
            if (@ViewBag.Error != null) {
                otpInput.style.animation = 'shake 0.5s';
                setTimeout(() => {
                    otpInput.style.animation = '';
                }, 500);
            }

            // Add shake animation
            const style = document.createElement('style');
            style.textContent = `
                @@keyframes shake {
                    0%, 100% { transform: translateX(0); }
                    10%, 30%, 50%, 70%, 90% { transform: translateX(-5px); }
                    20%, 40%, 60%, 80% { transform: translateX(5px); }
                }
            `;
            document.head.appendChild(style);
        });
    </script>
</body>
</html>